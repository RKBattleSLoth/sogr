# SOGR - Social Graph Intelligence Environment Configuration
# Copy this file to .env and fill in your actual values

# =============================================================================
# Database Configuration
# =============================================================================
# Database URL for SQLite (default: local file)
DATABASE_URL="file:./dev.db"

# =============================================================================
# AI/LLM Service Configuration
# =============================================================================
# Primary LLM Service (OpenAI, Anthropic, or custom)
LLM_PROVIDER="openai"
LLM_API_KEY="your-openai-api-key-here"
LLM_MODEL="gpt-4-turbo-preview"

# Alternative LLM Provider (fallback)
FALLBACK_LLM_PROVIDER="anthropic"
FALLBACK_LLM_API_KEY="your-anthropic-api-key-here"
FALLBACK_LLM_MODEL="claude-3-sonnet-20240229"

# =============================================================================
# Vector Search Configuration
# =============================================================================
# Vector database service (openai, local, or custom)
VECTOR_PROVIDER="openai"
VECTOR_API_KEY="your-vector-api-key-here"
VECTOR_MODEL="text-embedding-3-small"

# Local vector database configuration (if using local provider)
VECTOR_DB_URL="http://localhost:8080"
VECTOR_DB_INDEX="sogr-vectors"

# =============================================================================
# External Service Integration
# =============================================================================
# Gmail Integration (Optional)
GMAIL_CLIENT_ID="your-gmail-client-id"
GMAIL_CLIENT_SECRET="your-gmail-client-secret"
GMAIL_REDIRECT_URI="http://localhost:3000/api/auth/gmail/callback"

# Outlook Integration (Optional)
OUTLOOK_CLIENT_ID="your-outlook-client-id"
OUTLOOK_CLIENT_SECRET="your-outlook-client-secret"
OUTLOOK_REDIRECT_URI="http://localhost:3000/api/auth/outlook/callback"

# =============================================================================
# Authentication Configuration
# =============================================================================
# NextAuth.js Configuration
NEXTAUTH_SECRET="your-nextauth-secret-here"
NEXTAUTH_URL="http://localhost:3000"

# Optional: OAuth providers for authentication
GITHUB_ID="your-github-client-id"
GITHUB_SECRET="your-github-client-secret"

GOOGLE_CLIENT_ID="your-google-client-id"
GOOGLE_CLIENT_SECRET="your-google-client-secret"

# =============================================================================
# Application Configuration
# =============================================================================
# Application Settings
NODE_ENV="development"
APP_NAME="SOGR - Social Graph Intelligence"
APP_URL="http://localhost:3000"

# Feature Flags
ENABLE_EMAIL_INTEGRATION="false"
ENABLE_MESSAGING_INTEGRATION="false"
ENABLE_SOCIAL_MEDIA_INTEGRATION="false"
ENABLE_ADVANCED_ANALYTICS="false"
ENABLE_REALTIME_COLLABORATION="false"

# =============================================================================
# Logging and Monitoring
# =============================================================================
# Log Level (debug, info, warn, error)
LOG_LEVEL="info"

# Optional: External logging service
LOGGING_SERVICE_URL=""
LOGGING_SERVICE_API_KEY=""

# =============================================================================
# Performance Configuration
# =============================================================================
# Cache Configuration
CACHE_TTL="3600" # 1 hour in seconds
CACHE_MAX_SIZE="1000" # Maximum number of cached items

# Rate Limiting
RATE_LIMIT_REQUESTS="100" # requests per minute
RATE_LIMIT_WINDOW="60000" # window in milliseconds

# =============================================================================
# Development Configuration
# =============================================================================
# Development Settings (only used in development mode)
ENABLE_DEV_TOOLS="true"
ENABLE_MOCK_DATA="true"
ENABLE_DEBUG_LOGGING="true"
ENABLE_PERFORMANCE_MONITORING="true"

# Test Database (for development testing)
TEST_DATABASE_URL="file:./test.db"

# =============================================================================
# Security Configuration
# =============================================================================
# CORS Configuration
ALLOWED_ORIGINS="http://localhost:3000,http://localhost:3001"

# Security Headers
ENABLE_CSP="true"
ENABLE_HSTS="true"
ENABLE_XSS_PROTECTION="true"

# =============================================================================
# Optional: External API Keys for Enhanced Features
# =============================================================================
# Twitter API (for social media integration)
TWITTER_API_KEY="your-twitter-api-key"
TWITTER_API_SECRET="your-twitter-api-secret"
TWITTER_ACCESS_TOKEN="your-twitter-access-token"
TWITTER_ACCESS_TOKEN_SECRET="your-twitter-access-token-secret"

# LinkedIn API (for professional network integration)
LINKEDIN_CLIENT_ID="your-linkedin-client-id"
LINKEDIN_CLIENT_SECRET="your-linkedin-client-secret"

# =============================================================================
# Notes
# =============================================================================
# 1. Never commit this file with actual API keys to version control
# 2. Use environment-specific .env files for different deployments
# 3. Some features may require additional setup beyond just API keys
# 4. For production, use a secure secret management system
# 5. Test your configuration using: npm run validate